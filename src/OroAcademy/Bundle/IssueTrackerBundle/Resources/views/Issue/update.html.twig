{% extends 'OroUIBundle:actions:update.html.twig' %}
{% form_theme form with 'OroFormBundle:Form:fields.html.twig' %}

{% if form.vars.value.id %}
    {% set formAction = path('oro_academy.issue_update', { 'id': form.vars.value.id }) %}
{% else %}
    {% set formAction = path('oro_academy.issue_create') %}
{% endif %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_academy_api_delete_issue', {'id': form.vars.value.id}),
            'dataRedirect': path('oro_academy.issue_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-tag',
            'dataId': form.vars.value.id,
            'entity_label': 'oro_academy.entity.issue.label'|trans
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('oro_academy.issue_index')) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('oro_academy.issue_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({ 'html': html }) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('oro_academy.issue_index'),
        'indexLabel': 'oro_academy.entity.issue.label'|trans,
        'entityTitle': form.vars.value.code
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'Vehicle'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'issue-edit' %}
    {% set dataBlocks = [{
    'title': 'General'|trans,
    'class': 'active',
    'subblocks': [{
    'title': '',
    'data': [
    form_row(form.summary),
    form_row(form.description),
    form_row(form.priority),
    form_row(form.type),
    form_row(form.assignee),
    form_row(form.tags)
    ]
    }]
    }] %}
    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}

{% endblock content_data %}
